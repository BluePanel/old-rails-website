
<%- model_class = Topic -%>
<div class="page-header">
  <h1><%=t '.title', :default => @topic.name %></h1>
</div>

<% for post in @topic.posts %>  
  <article class="post">
      
      <header class="post-top">
        <span id="user-name">
          <%= link_to post.user.name, post.user %>
        </span>
        created on: <%= post.created_at %>
      </header>  
      
      <span class="left post-padding">
        Avatar
        <!-- Avatar/ Member Group/ .... -->  
      </span>
      
      <span class="center post-padding">
  			<%= post.content.bbcode_to_html.html_safe %>
      </span>
      
      <% if moderator_or_owner?(post.user.id) %>
        <span class="right post-padding">
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        "#{edit_post_path(post)}?topic=#{@topic.id}", :class => 'btn btn-mini' unless post == @topic.posts.first %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        post_path(post),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' unless post == @topic.posts.first %>
        </span>
      <% end %>

      <footer>
        <!-- Signatur e.g. -->
      </footer>
           
  </article>


<% end %>

<% if user? %>
  <p><%= link_to "Reply", "#{new_post_path}?topic=#{@topic.id}" %></p>
<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              "/forums/#{@topic.forum_id}", :class => 'btn' %>
  <% if moderator_or_owner?(@topic.user.id) %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_topic_path(@topic), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                topic_path(@topic),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>

